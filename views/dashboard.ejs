<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
    margin: 0;
    padding: 20px;
    transition: background-color 0.3s ease;
  }

  h1 {
    text-align: center;
    color: #333;
  }

  .group-name {
    font-weight: bold;
    color: #337ab7;
    margin-bottom: 10px;
  }

  .message {
    background-color: #fff;
    border-radius: 5px;
    padding: 10px;
    margin-bottom: 10px;
  }

  .sender {
    font-weight: bold;
    color: #333;
  }

  .message-content {
    margin-top: 5px;
  }

  .dark-mode {
    background-color: #333;
    color: #fff;
  }
</style>

<h1>Group Chat</h1>

<div class="group-name">Sample Group</div>

<div class="message"><span class="sender">John:</span> Hello, everyone!</div>

<div class="message"><span class="sender">Emma:</span> Hi, John!</div>

<div class="message"><span class="sender">David:</span> Hey, Emma!</div>

<div class="message"><span class="sender">You:</span> Hey!!!</div>

<div>
  <button class="toggle">Toggle Dark Mode</button>
</div>

<script src="/socket.io/socket.io.js"></script>
