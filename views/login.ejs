<div
  class="wrapper d-flex justify-content-center align-items-center"
  style="height: 100vh"
>
  <form action="/login" method="post" class="card p-3 w-25">
    <h3>SIGN IN</h3>
    <% if(error) {%>
    <p class="text-danger"><%= error %></p>
    <%}%>
    <input
      type="text"
      name="username"
      placeholder="username"
      class="form-control mt-2 p-3"
    />
    <input
      type="password"
      name="password"
      placeholder="password"
      class="form-control mt-2 p-3"
    />
    <button type="submit" class="btn btn-success mt-4 mb-3 w-25">login</button>
    <div class="links">
      <a href="/forget"><p>DON'T REMEMBER PASSWORD?</p></a>
      <a href="/register">CREATE A NEW ACCOUNT</a> <br />
      <a href="/">Home</a>
    </div>
  </form>
</div>
